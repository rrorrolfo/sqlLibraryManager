extends layout

block content
  
  h2 Update Book

  form(action="/", method="post")
    .input_container.field
        label(for="title") Title
        input(id="title", type="text", name="title", value=book.title)
    
    .input_container.field
        label(for="author") Author
        input(id="author", type="text", name="author", value=book.author)

    .input_container.field 
        label(for="genre") Genre
        input(id="genre", type="text", name="genre", value=book.genre)

    .input_container.field 
        label(for="year") Year
        input(id="year", type="text", name="year", value=book.year)

    .cta_container
        .input_container
            input(type="submit" value="Update Book")
        
        .input_container
            a(class="button" href="/books") Cancel
        
  form(id="delete_form" action="" method="post" onsubmit="return confirm('Do you really want to delete this book?')")
    .input_container
      input(type="submit" value="Delete Book")

  
    